# Configuration Source Selection
# Set CONFIG_SOURCE to specify where to load configuration from:
# - "localfile" (default): Load from etc/app.yaml file
# - "secretsmanager": Load from AWS Secrets Manager
CONFIG_SOURCE=localfile

# Legacy option (deprecated, use CONFIG_SOURCE instead)
# Set USE_SECRETSMANAGER=true to load configuration from AWS Secrets Manager
# Set USE_SECRETSMANAGER=false or leave unset to load from etc/app.yaml file
USE_SECRETSMANAGER=false

# AWS Secrets Manager Configuration (only used when CONFIG_SOURCE=secretsmanager)
# The ID of the secret in Secrets Manager containing the application configuration
SECRET_ID=locky/config/app

# LocalStack Configuration (for local development)
# Set USE_LOCALSTACK=true to use LocalStack instead of production AWS
USE_LOCALSTACK=true

# AWS Endpoint URL (only used when USE_LOCALSTACK=true)
# LocalStack endpoint URL
AWS_ENDPOINT_URL=http://localhost:4566

# AWS Region
AWS_REGION=us-east-1

# AWS Credentials (optional - uses default credential chain if not set)
# AWS_ACCESS_KEY_ID=test
# AWS_SECRET_ACCESS_KEY=test
